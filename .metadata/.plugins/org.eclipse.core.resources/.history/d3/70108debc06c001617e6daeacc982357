#include <iostream>
using namespace std;

class Person
{
 public:
  Person(char *pN)
  {
   cout <<"Constructing "<
   pName = new  char(strlen(pN)+1);
   if (pName!=0)
   {
    strcpy(pName,pN);
   }
  }

  ~Person()
  {
   cout<<"Destructing"<
   pName[0]='\0';
   delete   pName;

  }

 protected:
  char *pName;
} ;


int main() {
	cout << "!!!start!!!" << endl; // prints !!!Hello World!!!
	 Person   p1("Randy");
	 Person   p2=p1;               //¼´Person  p2 (p1);
}
